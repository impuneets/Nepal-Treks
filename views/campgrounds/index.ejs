<% layout('layouts/boilerplate')%>
<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/new">Add Campground</a>
</div>

<% for(let campgroundd of campground) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img
        crossorigin="anonymous"
        class="img-fluid"
        src="<%= campgroundd.image[0].url  %>"
        alt=""
      />
    </div>
    <div class="col-mg-8">
      <div class="card-body">
        <h5 class="card-title"><%= campgroundd.title%></h5>
        <p class="card-text"><%= campgroundd.description%></p>
        <p class="card-text">
          <small class="text-muted"><%= campgroundd.location%></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= campgroundd._id%>"
          ><%= campgroundd.title%></a
        >
      </div>
    </div>
  </div>
</div>
<%}%>
