<% layout('layouts/boilerplate') %>

<div class="embed-responsive embed-responsive-4by3">
  <div id="map" class="embed-responsive-item" style="width: 100%; height: 500px"></div>
</div>

<h1>All Campgrounds</h1>

<div>
  <a href="/campgrounds/new">Add Campground</a>
</div>

<% for (let campgroundd of campgrounds) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img
          crossorigin="anonymous"
          class="img-fluid"
          src="<%= (campgroundd.image && campgroundd.image.length > 0) ? campgroundd.image[0].url : 'https://res.cloudinary.com/dtqcdptog/image/upload/v1707166347/NepalCamps/xeppkcrkh4tflaufcdpi.jpg' %>"
          alt="Campground Image"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campgroundd.title %></h5>
          <p class="card-text"><%= campgroundd.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= campgroundd.location %></small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%= campgroundd._id %>">
            <%= campgroundd.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
<% } %>

<script>
  let camps = <%- JSON.stringify(campgrounds) %>;
</script>
<script src="/js/clusterMap.js"></script>
